<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Home">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="?actionBarSize"
              android:background="@color/kesriLight">
              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="10dp"
                  android:src="@drawable/embtrend_icon"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:textSize="24dp"
                  android:layout_marginLeft="20dp"
                  android:textStyle="normal"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_gravity="center"
                  android:textColor="@color/white"/>


          </LinearLayout>


          <androidx.cardview.widget.CardView
              android:id="@+id/cv_slider_mainActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_margin="16dp"
              app:cardCornerRadius="8dp">


              <!-- Auto image slider space -->

          </androidx.cardview.widget.CardView>






          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/idCat_EmbDesigner"
                  android:layout_marginTop="10dp"
                  android:elevation="10dp"
                  app:cardCornerRadius="2dp"
                  android:layout_weight="1"
                  android:backgroundTint="@color/kesriLight"
                  app:cardMaxElevation="20dp"
                  android:layout_margin="5dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardPreventCornerOverlap="true" >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/photoSize"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:scaleType="fitXY"
                          android:src="@drawable/designer1"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/texyLableSize"
                          android:textSize="22dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:text="Embroidery Designer List"/>
                  </LinearLayout>


              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:id="@+id/idCat_MachineSell"
                  android:elevation="10dp"
                  app:cardCornerRadius="2dp"
                  android:layout_weight="1"
                  android:backgroundTint="@color/kesriLight"
                  app:cardMaxElevation="20dp"
                  android:layout_margin="5dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardPreventCornerOverlap="true" >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/photoSize"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:scaleType="fitXY"
                          android:src="@drawable/sell2"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/texyLableSize"
                          android:textSize="22dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:text="Purchase Embroidery Machine"/>
                  </LinearLayout>


              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:id="@+id/idCat_hireDesigner"
                  android:elevation="10dp"
                  app:cardCornerRadius="2dp"
                  android:layout_weight="1"
                  android:backgroundTint="@color/kesriLight"
                  app:cardMaxElevation="20dp"
                  android:layout_margin="5dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardPreventCornerOverlap="true" >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/photoSize"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:scaleType="fitXY"
                          android:src="@drawable/hiring"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/texyLableSize"
                          android:textSize="22dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:text="Hiring List For Desinger"/>
                  </LinearLayout>


              </androidx.cardview.widget.CardView>


              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:id="@+id/idCat_rentSpace"
                  android:elevation="10dp"
                  app:cardCornerRadius="2dp"
                  android:layout_weight="1"
                  android:backgroundTint="@color/kesriLight"
                  app:cardMaxElevation="20dp"
                  android:layout_margin="5dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardPreventCornerOverlap="true" >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/photoSize"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:scaleType="fitXY"
                          android:src="@drawable/space"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/texyLableSize"
                          android:textSize="22dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:text="Rent Space for Machine"/>
                  </LinearLayout>


              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:id="@+id/idCat_Engineers"
                  android:elevation="10dp"
                  android:layout_weight="1"
                  app:cardCornerRadius="2dp"
                  android:backgroundTint="@color/kesriLight"
                  app:cardMaxElevation="20dp"
                  android:layout_margin="5dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardPreventCornerOverlap="true" >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/photoSize"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:scaleType="fitXY"
                          android:src="@drawable/enginerers"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/texyLableSize"
                          android:textSize="22dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:text="Engineers For Machine"/>
                  </LinearLayout>


              </androidx.cardview.widget.CardView>





          </LinearLayout>













      </LinearLayout>

  </ScrollView>




</FrameLayout>