<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botamNavigationbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kesriLight"
        app:itemIconSize="25dp"
        app:itemIconTint="@drawable/botam_navigation_selector"
        app:itemTextColor="@drawable/botam_navigation_selector"
        app:menu="@menu/botam_nav_menu" />


</androidx.appcompat.widget.LinearLayoutCompat>
