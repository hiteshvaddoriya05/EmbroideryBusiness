<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpaceDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/kesri">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/embtrend_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Space Detail"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="normal" />


    </LinearLayout> <!-- Profile-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/space" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D3C8C5"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill Below Space Detail"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/idET_spaceData_buildingNos"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                   android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="Building No"
                    android:inputType="text"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_spaceData_buildinFloor"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="Floor"
                    android:inputType="text"
                    android:textSize="20dp" />


            </LinearLayout>



                <EditText
                    android:id="@+id/idET_spaceData_industries"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="Industries Name"
                    android:inputType="text"
                    android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/idET_spaceData_area"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="Area"
                    android:inputType="text"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_spaceData_near"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="Near"
                    android:inputType="text"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/idET_spaceData_city"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="City"
                    android:inputType="text"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_spaceData_state"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:hint="State"
                    android:inputType="text"
                    android:textSize="20dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Building Rent Area :"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Length :"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_spaceData_areaLength"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:gravity="center"
                    android:hint="In Feet"
                    android:inputType="number"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Width :"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_spaceData_areaWidth"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:gravity="center"
                    android:hint="In Feet"
                    android:inputType="number"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Rent (Rs) :"
                    android:textColor="@color/black"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_spaceData_rentPrice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:gravity="center"

                    android:hint="Amount"
                    android:inputType="number"
                    android:textSize="20dp" />


            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/idBtn_MachineData_getImg"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="+ Add Images"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/profile_btn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/idBtn_spaceData_submit"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/profile_btn"/>


        </LinearLayout>

    </ScrollView>




</LinearLayout>