<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SellMachineDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/kesri">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/embtrend_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Machine Detail"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="normal" />


    </LinearLayout> <!-- Profile-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/sell2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D3C8C5"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill Below Machine Detail"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Machine Type"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/idRB_MachineData_malti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Malti"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/idRB_MachineData_coding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coding"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/idRB_MachineData_chain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chain"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/idRB_MachineData_sq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sequience"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/idRB_MachineData_dualSQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dual Sequience"
                        android:textSize="20dp" />


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Company Name :"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_MachineData_companyname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_border"
                    android:gravity="center"
                    android:hint="Name"
                    android:inputType="text"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="No of Machine Head :"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_MachineData_heads"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="Nos"
                    android:inputType="number"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Machine Area (Width) :"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_MachinData_areaWidth"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="mm"
                    android:inputType="number"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Selling Price (Rs) :"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/idET_MachinData_Price"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_border"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="Amount"
                    android:inputType="number"
                    android:textSize="20dp" />


            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/idBtn_MachineData_AddImg"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="+ Add Images"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/profile_btn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_recylcerMachineImg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:id="@+id/idIV_sellmachine"/>



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/idBtn_machineData_submit"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/profile_btn"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>